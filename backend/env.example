# ------------------------------
# Core Configuration
# ------------------------------

# -- Database --
# Example for local PostgreSQL:
# DATABASE_URL="postgresql+psycopg://postgres:postgres@localhost:5432/openhay"
DATABASE_URL=

# -- JWT Authentication --
# Generate a secure secret key. You can use: openssl rand -hex 32
JWT_SECRET_KEY=

# -- Environment --
# Set to "dev" for development or "prod" for production
ENV="dev"

# ------------------------------
# LLM Providers
# ------------------------------

# -- LLM Provider Selection --
# Choose one: "google", "openai", "anthropic", "ollama"
LLM_PROVIDER="google"

# -- LLM Models --
LLM_MODEL="gemini-2.5-flash"
LEAD_RESEARCH_LLM_MODEL="gemini-2.5-flash"
SUBAGENT_RESEARCH_LLM_MODEL="gemini-2.5-flash"

# -- API Keys (only provide the one for your selected provider) --
GOOGLE_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# -- Local LLM (Ollama) --
OLLAMA_BASE_URL="http://localhost:11434/v1"
OLLAMA_MODEL="qwen2:7b"

# ------------------------------
# External Services
# ------------------------------

# -- Web Search (Brave Search API) --
BRAVE_API_KEY=

# -- Telemetry (Logfire) --
LOGFIRE_TOKEN=

# -- Email (Resend or SMTP) --
# Choose "resend" or "smtp"
EMAIL_PROVIDER="resend"
RESEND_API_KEY=
SUPPORT_OWNER_EMAIL=
SUPPORT_FROM_EMAIL=

# -- SMTP Configuration (if EMAIL_PROVIDER="smtp") --
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=465
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# ------------------------------
# Deployment & CORS
# ------------------------------

# -- CORS Origins --
# For local development, this should be your frontend's URL
# Example: ALLOWED_ORIGINS="http://localhost:8080"
# For multiple origins, use a comma-separated list: "http://localhost:8080,https://your-domain.com"
ALLOWED_ORIGINS=

# -- Deployment URLs (optional, for specific environments like Railway) --
# Your frontend's public URL
HOST_URL=
# Railway-specific public domain variable
RAILWAY_PUBLIC_DOMAIN=


# ------------------------------
# Analytics & Privacy
# ------------------------------

# -- IP Collection --
# Set to false to disable client IP collection
COLLECT_CLIENT_IP=true
# A random salt for hashing IPs if collection is enabled
ANALYTICS_IP_SALT=

# ------------------------------
# Token Expiration
# ------------------------------

ACCESS_TOKEN_EXPIRE_DAYS=7
GUEST_TOKEN_EXPIRE_HOURS=24
REFRESH_TOKEN_EXPIRE_DAYS=30

# ------------------------------
# Rate Limiting (RPM)
# ------------------------------
GEMINI_FLASH_RPM=5
GEMINI_PRO_RPM=3
